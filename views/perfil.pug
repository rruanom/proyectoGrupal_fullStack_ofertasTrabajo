doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Ofertas de Empleo FullStack
    link(rel="stylesheet" href="/css/styleLogin.css")
    link(href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet")
    script(src="https://kit.fontawesome.com/27f702310a.js" crossorigin="anonymous")


  body
    header
      if islogged
        if isadmin
          include menuAdmin.pug
        else
          include menuUsuario.pug
      else
        include menuStandart.pug

    main
      #tarjetaPerfil
        h2 PERFIL
        form#formPerfil(action="#" method="POST")
          #divPerfilEmail
            input#emailLogin(type="email" name="emailLogin" placeholder="Introduce email...")
          #divPerfilNombre
            input#inputNombrePerfil(type="text" name="inputNombrePerfil" placeholder="Introduce nombre de usuario...")
          #fotoPerfil
            input#inputFotoPerfil(type="text" name="inputFotoPerfil" placeholder="Foto de perfil...")
          #divSubmitPerfil
            input(type="submit" value="Login")
        #divRecuperarPass
          button#botonRecuperarPass ¿Has olvidado tu contraseña?

    script(src="script/script.js")